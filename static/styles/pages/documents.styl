#content
	.header
		font-size 30px
		color black
		i.icon
			margin-right 8px
	#listDocuments
		.headers
			position relative
			.header
				display inline-block
				color gray
				opacity 0.5
				padding 40px
				padding-left 0px
				padding-bottom 0px
				i.icon
					opacity 0.5
				&.active
					color black
					opacity 1
				span.fa-stack
					font-size 16px
					margin-left 10px
			div.input
				display inline-block
				position absolute
				z-index 50
				right 8px
				bottom 20px
				float right
				opacity 0.6
				width 200px
				transition width 100ms ease-out
				transition-delay 300ms
				&:hover
					opacity 1
				&.large
					width 300px
					transition width 300ms ease-out
				input
					display block
					width 100%
					padding-right 26px
				i
					position absolute
					top 5px
					right 7px
					color #CCC
			div.autoComplete
				display inline-block
				position absolute
				transition height 100ms ease-in
				width 300px
				height 0px
				overflow hidden
				z-index 25
				right 8px
				top 69px
				background-color #e67e22
				box-shadow 0px 0px 8px #888
				padding-bottom 0px
				&.active
					transition all 100ms ease-in
					transition-delay 200ms
					height 195px
					// padding-bottom 12px
					overflow-y auto!important
				.UE
					width 200%
					padding 12px
					&:hover
						background-color alpha(white, 0.2)
					.code
						font-size 24px
					.name
						font-size 16px
		.contents
			padding-top 10px
			width 100%
			overflow-x hidden
			height 150px
			.slider
				width 200%
				position relative
				left 0
				transition left 300ms ease-out
				&.showSecond
					left -100%
					transition left 300ms ease-out
				.content
					vertical-align top
					overflow visible
					display inline-block
					width 50%
					.path
						.pathComponent
							opacity 0.9
							display inline-block
							color #888
							i
								margin-left 10px
								margin-right 10px
							&:last-child
								color black
							&:hover i
								color #e67e22
					.ue
						font-size 28px
						display inline-block
						width 240px
						padding 10px
						transform scale(1)
						transform-origin center center
						transition transform 100ms linear
						i
							margin-right 10px
						span
							position relative
							top -1px
							font-size 20px
						&:hover
							transition transform 100ms linear
							transform scale(1.1)
						.leaf
							position relative
							overflow hidden
							div
								font-size 20px
							.controls
								text-align center
								position absolute
								color white
								top -100%
								left 0
								right 0
								height 100%
								background-color #e67e22
								transition top 100ms linear
							&.active
								.controls
									top 0%
									transition top 100ms linear