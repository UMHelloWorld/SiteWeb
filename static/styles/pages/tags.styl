.tags
	> .tag
		position relative
		display inline-block
		margin 3px
		padding 7px
		padding-right 8px
		padding-left 8px
		border-radius 15px
		font-size 11px
		white-space nowrap
		background-color #f7fdff
		border 1px solid #c0d4db
		&.selected
			border-color lighten(saturation(#27ae60, 30%), 30%)
			padding-left 22px
	> .tag.selected::before
		content '\f058'
		position absolute
		top 4px
		left 6px
		display block
		margin-right 4px
		color lighten(#2ecc71, 20%)
		font normal normal normal 14px/1 FontAwesome