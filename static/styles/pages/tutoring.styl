#content
	width auto!important
#forum
	margin-bottom 400px
	h1
		font-size 26px
		padding 30px
		width 960px
		margin auto
		span
			
	.bg-white
		box-shadow 0px 0px 2px #DDD
		width 960px
		padding 20px
		background-color white
		margin auto
	.head
		> .tags
			padding 10px
		> .top
			border-bottom 1px solid #CCC
			> .title, > .menu
				display inline-block
				width 50%
			> .title
				font-weight 400
				padding 10px
			> .menu
				display inline-block
				width 50%
				text-align right
				padding-right 15px
				> a
					text-decoration none
					color inherit
					padding 10px
					padding-left 4px
					padding-right 4px
					margin-left 6px
					margin-right 6px
					padding-bottom 6px
					&.active, &:hover
						border-bottom 2px solid #e67e22
						color #e67e22
					&.active
						font-weight 400
	@import 'tags.styl'
	.question
		border-bottom 1px solid #DDD
		widthOfANumber = 50px
		clear both
		.numbers
			width widthOfANumber*3
			float left
			padding-top 24px
			> div
				display inline-block
				text-align center
				font-size 20px
				width widthOfANumber
				height widthOfANumber
				&::after
					padding-top 8px
					font-size 11px
					display block
			.votes::after
				content 'votes'
			.answers::after
				content 'rÃ©ponses'
			.views::after
				content 'vues'
		.content
			margin-left widthOfANumber*3
			display block
			padding 10px
			.title
				padding 6px
				color darken(#2980b9, 25%)
				font-weight 400
				text-decoration none
				display block
			.tags
				padding 8px
				display inline-block
				> .tag
					font-size 10px
					padding-top 4px
					padding-bottom 4px
					padding-right 6px
					padding-left 6px
			.info
				padding 8px
				float right
				display inline-block
				font-size 11px
				color #666
				> .time, > .who, > .reputation
					display inline-block
				.who
					color #2980b9
					text-decoration none
					padding-left 6px
					padding-right 6px