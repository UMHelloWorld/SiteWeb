body
	overflow-y scroll
.headers
	h1
		display inline-block
		padding 10px
		padding-right 20px
		opacity 0.4
		&.active
			opacity 1
.sign-in
	.field
		margin auto
		width 450px
		padding 6px
		label, .input
			display inline-block
		label
			font-weight 400
			width (150px - 12px)
		input, button
			width (300px - 12px)
		button
			padding 9px
			i
				opacity 0.6
				margin-right 4px
			
