body
	div#fixedPartHeader
		position absolute
		top 0px
		left 0px
		right 0px
	div#page
		position absolute
		top 80px
		left 0px
		bottom 0px
		right 0px
		background-image none
		div#content
			width 100%!important
			div#pdfArea div#pdfPlace
				margin 0px
#annotations
	.annotation
		position absolute
		background-color alpha(#d35400, 0.1)
		border 1px solid alpha(#d35400, 0.3)
pdfWidth = 800px
#toolbox
	background-color #e67e22
	position absolute
	top 0px
	left 0px
	padding-left 10px
	height 32px
	width 100%
	z-index 5
	box-shadow 0px 0px 5px #CCC
	.item
		padding 6px
		padding-left 8px
		padding-right 8px
		margin-left 4px
		height 32px
		display inline-block
		cursor default
		transition background-color 100ms linear
		background-color transparent
		i
			margin-right 5px
			margin-left 5px
		&.active, &:active
			transition background-color 100ms linear
			background-color white!important
		&:hover
			transition background-color 100ms linear
			background-color alpha(white, 0.5)
@keyframes fadeToNone
	0%
		visibility visible
		opacity 1
	99%
		visibility visible
		opacity 0
	100%
		opacity 0
		visibility hidden 
textarea
	border: none;
	overflow: auto;
	outline: none;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	box-shadow: none;
#rightPanel
	position absolute
	top 32px
	bottom 0px
	right 0px
	left pdfWidth
	overflow auto
	border-left 2px solid gray
	padding 25px
	background-color white
	z-index 1000
	.annotations
		size = 80px
		footerSize = 20px
		.annotation::after
			background linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%)
			position absolute
			display block
			height (size / 6)
			width 100%
			left (size / 2)
			right 0px
			bottom footerSize
			content ''
			z-index 1
			border-radius 0px 0px 6px 0px
		.details
			position absolute
			z-index 3
			bottom 0px
			height footerSize
			border-top 1px solid lighten(gray, 80%)
			background-color lighten(gray, 90%)
			left 0px
			right 0px
			font-size 9px
			.content
				position relative
				top 5px
				left 6px
		.annotation
			padding-bottom footerSize
			overflow hidden
			position relative
			.imageWrapper
				display inline-block
				position absolute
				left 0px
				top 0px
				bottom 0px
				z-index 2
				width size * 1.3
				background-repeat no-repeat
				background-size cover
				background-position center center
				box-shadow 0px 0px 8px #CCC
			.description
				height size
				float left
				margin-left size * 1.3
				h1
					font-size 14px
					background-color gray
					color white
					padding 5px
			padding 10px
			margin 10px
			border 2px solid gray
			border-radius 6px
			opacity 0.6
			transition opacity 100ms linear
			&.emph
				opacity 1
				transition opacity 100ms linear
			&:hover
				border-color #e67e22
		
	.resizer
		position absolute
		left -5px
		width 12px
		top 0px
		bottom 0px
	.title
		padding-bottom 20px
		font-size 28px
	.newComment
		.writing
			position relative
			margin-top 20px
			margin-bottom 20px
			border 1px solid rgb(169, 169, 169);
			border-image-outset 0px
			border-image-repeat stretch
			border-image-slice 100%
			border-image-source none
			border-image-width 1
			border-radius 10px
			overflow-x hidden
			overflow-y auto
			height 300px
			resize vertical
			max-width 100%
			min-width 100%
			background-image url('/static/images/pdf-viewer/bicolor-background.png')
			background-position center top
			background-repeat repeat
			.render, textarea
				display inline-block
				padding 10px
				width 50%
				height 100%
				box-sizing border-box
				border none
				resize none
				vertical-align top
			textarea
				position relative
				z-index 1
				font-family inherit
				overflow hidden
			.render
				overflow visible
		button
			padding 20px
			width 40%
			margin auto
			display block
		.helper
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			text-align center
			font-size 30px
			padding 20px
			opacity 1
			display block
			z-index 7
			background-color white
			&.hide
				animation fadeToNone 300ms forwards
		.content
			.help
				text-align center
				font-size 10px
				color gray
				padding 20px
				padding-bottom 0px
				a
					color saturation(blue, 30%)
					&:hover
						color saturation(blue, 100%)
			.about
				.tools
					position relative
					z-index 6
					padding 5px
					background-color #95a5a6
					.colors
						margin-right 5px
						margin-left 5px
						magin-right 0px
						font-size 9px
						padding 0px
						width 24px
						display inline-block
						vertical-align top
						.tool
							padding 2px
							margin 0px
							border-radius 1px
							float left
					.tool
						padding 5px
						padding-left 8px
						padding-right 8px
						margin-right 5px
						margin-left 5px
						display inline-block
						border-radius 4px
						&:hover
							background-color lighten(#95a5a6, 30%)
						&.active
							background-color lighten(#95a5a6, 70%)
					.select
						display inline-block
						position relative
						.dropdown
							transform scale(0.8)
							transform-origin left top
							padding-top 7px
							padding-bottom 7px
							position absolute
							z-index 5
							left 2px
							top 30px
							width 120px
							background-color #95a5a6
							.tool
								padding-left 3px
								i
									width 24px
									text-align center
									vertical-align middle
								display block
				margin 3px
				border 1px solid #CCC
				.place
					text-align center
					padding 12px
					> div
						div
							display inline-block
							canvas:first-child
								border 1px dashed #CCC
#leftPanel
	position absolute
	top 32px
	left 0px
	bottom 0px
	overflow-y scroll
	overflow-x hidden
	width pdfWidth
	#pdfArea
		position relative
		padding 25px
		#pdfPlace
			// width 800px
			margin auto
			box-shadow 0px 0px 6px #CCC
			position relative
			background-color white
			#pdf
				background-color white
			#makeComment
				width 100%
				position absolute
				top 0px
				left 0px
				z-index 10
				&.ableToDrawComment
					cursor crosshair
			.comment
				position absolute
				left 0px
				width 30px
				z-index 100
				opacity 0.4
				> .content
					height 100%
					border-left 0px solid #e67e22
					position relative
					.label
						padding-top 3px
						width 16px
						height 16px
						background-color #e67e22
						text-align center
						color white
						font-size 10px
				&:hover, &.active
					transition opacity linear 100ms
					opacity 1
				&.active
					transition border-left linear 100ms
					border-left 2px solid #e67e22

.paintArea
	position relative
	canvas:nth-child(n+2)
		position absolute
		top 0
		left 0