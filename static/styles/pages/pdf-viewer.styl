#content
	overflow visible!important
#pdfPlace
	position relative
	top 30px
	width 800px
	margin auto
	#pdf
		background-color white
	#makeComment
		width 100%
		position absolute
		top 0px
		left 0px
		z-index 10
	.comment
		position absolute
		left 0px
		width 30px
		z-index 100
		opacity 0.4
		> .content
			height 100%
			border-left 0px solid #e67e22
			position relative
			.stuff
				position absolute
				left -150px
				width 150px
				top 0px
				height 100%
				overflow hidden
				.content
					padding 3px
					background-color #e67e22
					position relative
					left 150px
					width 150px
					height 100%
					font-size 10px
					cursor default
					overflow auto
					> div
						padding 3px
						&:hover
							color white
			.label
				padding-top 3px
				width 16px
				height 16px
				background-color #e67e22
				text-align center
				color white
				font-size 10px
		&:hover
			transition opacity linear 100ms
			opacity 1
			.content
				transition border-left linear 100ms
				border-left 2px solid #e67e22
			.stuff
				.content
					transition left linear 100ms
					left 0px
