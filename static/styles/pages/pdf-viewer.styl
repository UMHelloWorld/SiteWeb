#content
	overflow visible!important
#page
	top 80px!important
	background-image none!important
#content
	position relative!important
	width 100%!important
	#pdfArea #pdfPlace
		margin 0px!important

#toolbox
	background-color #e67e22
	position fixed
	top 80px
	left 0px
	padding-left 10px
	height 32px
	width 100%
	z-index 5
	box-shadow 0px 0px 5px #CCC
	.item
		padding 6px
		padding-left 8px
		padding-right 8px
		margin-left 4px
		height 32px
		display inline-block
		cursor default
		transition background-color 100ms linear
		background-color transparent
		i
			margin-right 5px
			margin-left 5px
		&.active, &:active
			transition background-color 100ms linear
			background-color white!important
		&:hover
			transition background-color 100ms linear
			background-color alpha(white, 0.5)
#rightPanel
	position fixed
	top 80px + 32px
	bottom 0px
	right 0px
	left 800px + 25px * 2
	border-left 2px solid gray
	padding 25px
	background-color white
	z-index 1000
	.title
		padding-bottom 20px
		font-size 28px
	.here
		text-align center
		> div
			display inline-block
	textarea
		margin-top 20px
		margin-bottom 20px
		padding 20px
		font-family "Open Sans"
		height 200px
		width 100%
		border-radius 10px
	button
		padding 20px
		width 40%
		margin auto
		display block
	.toolbox-draw
		background-color #AAA
		padding 5px
		.tool-pencil
			display inline-block
			border-radius 50%
			width 14px
			height 14px
			margin 5px
			&.yellow
				background-color #f39c12
			&[data-color='black']
				background-color black
			&[data-color='red']
				background-color #e74c3c
			&[data-color='erase']
				background-color pink
				border-radius 20%
			&.small
				width 7px
				height 7px
				margin 8px
#pdfArea
	position relative
	top 32px
	padding 25px
	#pdfPlace
		width 800px
		margin auto
		box-shadow 0px 0px 6px #CCC
		position relative
		#pdf
			background-color white
		#makeComment
			width 100%
			position absolute
			top 0px
			left 0px
			z-index 10
			&.ableToDrawComment
				cursor crosshair
		.comment
			position absolute
			left 0px
			width 30px
			z-index 100
			opacity 0.4
			> .content
				height 100%
				border-left 0px solid #e67e22
				position relative
				.stuff
					position absolute
					left -150px
					width 150px
					top 0px
					height 100%
					overflow hidden
					.content
						padding 3px
						background-color #e67e22
						position relative
						left 150px
						width 150px
						height 100%
						font-size 10px
						cursor default
						overflow auto
						> div
							padding 3px
							&:hover
								color white
				.label
					padding-top 3px
					width 16px
					height 16px
					background-color #e67e22
					text-align center
					color white
					font-size 10px
			&:hover
				transition opacity linear 100ms
				opacity 1
				.content
					transition border-left linear 100ms
					border-left 2px solid #e67e22
				.stuff
					.content
						transition left linear 100ms
						left 0px
