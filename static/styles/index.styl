@import "../../node_modules/kouto-swiss"
meyer-reset()
normalize()
box-sizing-reset()

body.smallHeader
	header
		font-size 15px
		height 80px
		transition height 100ms linear
		.background div.content img#logoSmall
			transition opacity 100ms linear
			opacity 1
			margin-top 14px
			margin-left 4px
	#content
		transition margin-top 100ms linear
		padding-top 200px

body
	font-family 'Open Sans', sans-serif
	font-weight 300
	background-color #ecf0f1
	header
		transition height 200ms linear
		position fixed
		z-index 100
		top 0
		width 100%
		height 300px
		background-image url('/static/images/header/back-repeat.jpg')
		background-repeat repeat-x
		box-shadow 0px 0px 8px #555
		.background
			background-image url('/static/images/header/background.jpg')
			background-position center top
			background-repeat no-repeat
			color #e67e22
			height 100%
			.content
				height 100%
				gs()
				#logo
					margin auto
					display block
				#logoSmall
					opacity 0
					float left
					height 50px
				.links
					text-align right
					margin-top 17px
					margin-bottom 17px
					font-size 18px
					a.link
						text-decoration none
						cursor default
						i
							margin-right 5px
							&.sum, &.fa-terminal
								font-weight bold
						color #CCC
						text-shadow -1px 0 #555, 0 1px #555, 1px 0 #555, 0 -1px #555
						margin 5px
						padding 5px
						display inline-block
						border-bottom 2px solid transparent
						&.active, &:hover
							color #e67e22
						&.active
							border-bottom 2px solid #e67e22
	#content
		padding-top 300px
		gs()
		#emphArea
			img
				float right
				margin 30px
				margin-left 0px
			div
				padding-left 40px
				text-align right
				margin-right 90px + 178px
				font-size 57px
				padding-top 50px
		#listings
			clear both
			background-color #e67e22
			border-radius 10px
			#item
				background-color transparent
				&:hover
					transition background-color 100ms linear
					background-color alpha(white, 0.2)
					.image
						transition transform 100ms linear
						transform scale(1.14)
				col(3)
				height 200px
				float none
				span
					display block
					font-variant small-caps
					text-align center
					color white
					font-size 48px
					margin-top 13px
					margin-bottom 13px
				.image
					transform scale(1)
					largeur = 100px
					margin auto
					width largeur
					height largeur
					border-radius (largeur / 2)
					overflow hidden
					background-color white
					box-shadow 0px 0px 12px alpha(#AAA, 0.8) inset
					img
						padding 10px
						width largeur
						height largeur
						position relative
						top 10px
						&.fixPosEvents
							padding 7px
							top 5px
							left 5px
						&.fixPosPlus
							padding 16px
							top 0px
							left 0px