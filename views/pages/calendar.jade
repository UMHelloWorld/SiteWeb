script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js')
script(src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.js')
link(rel="stylesheet", type="text/css", href='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.css')
link(rel="stylesheet", type="text/css", href='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.print.css')

script(src='/static/scripts/lib-calendar.js')

script.
	var app = angular.module('app',['ui.calendar']);

	app.controller('MyController', function($scope) {
	    /* config object */
	    $scope.calendar = {
			height: 450,
			editable: true,
			header:{
				left: 'month basicWeek basicDay agendaWeek agendaDay',
				center: 'title',
				right: 'today prev,next'
			},
			dayClick: $scope.alertEventOnClick,
			eventDrop: $scope.alertOnDrop,
			eventResize: $scope.alertOnResize
		}
	    $scope.eventSources = [];
	});

div(ng-controller='MyController')
	<div ui-calendar='' ng-model="eventSources"></div>